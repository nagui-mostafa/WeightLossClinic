# Application
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/weight_loss_clinic?schema=public

# JWT Configuration
JWT_ACCESS_SECRET=your-access-secret-key-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production
ACCESS_TOKEN_TTL=3d
REFRESH_TOKEN_TTL=14d

# Token TTLs
PASSWORD_RESET_TOKEN_TTL=15m
EMAIL_VERIFICATION_TOKEN_TTL=24h

# Mail Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your-email@gmail.com
MAIL_PASS=your-app-password
MAIL_FROM=noreply@weightlossclinic.com

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CLIENT_APP_URL=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info

# Optional: Sentry DSN for error tracking
# SENTRY_DSN=

# Optional: Prometheus metrics
PROM_ENABLED=true

# Email verification (optional)
EMAIL_VERIFICATION_ENABLED=false

# Seed script (optional)
SEED_ADMIN_EMAIL=admin@weightlossclinic.com
SEED_ADMIN_PASSWORD=ChangeMeNow!123
